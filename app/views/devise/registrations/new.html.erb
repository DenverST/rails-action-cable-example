
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


      <div class="form-inputs">
        <%= f.label :name, required: true, autofocus: true %>
        <%= f.text_area :name, class: "form-control", data: {textarea: "name"} %>
        <%= f.label :email, required: true %>
        <%= f.text_area :email, class: "form-control", data: {textarea: "email"} %>
        <%= f.label :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.text_area :password, class: "form-control", data: {textarea: "password"} %>
        <%= f.label :password_confirmation, required: true %>
        <%= f.text_area :password, class: "form-control", data: {textarea: "password"} %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign up" %>
      </div>
      <% end %>

      <!-- <%= render "devise/shared/links" %> -->
    </div>
  </div>

</div>
