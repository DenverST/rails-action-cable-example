<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.label :email, required: false, autofocus: true %>
        <%= f.text_area :email, class: "form-control", data: {textarea: "email"} %>
        <%= f.label :password, required: false %>
        <%= f.text_area :password, class: "form-control", data: {textarea: "password"} %>
        <%= f.label :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.submit "Log in" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
